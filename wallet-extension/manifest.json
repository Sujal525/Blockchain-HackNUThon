{
  "manifest_version": 3,
  "name": "Multi-Network Wallet",
  "version": "1.0",
  "description": "A browser extension wallet supporting Ethereum and Solana with a standardized API.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "wallet.js"
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_start",
      "type": "module"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injectedScript.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
